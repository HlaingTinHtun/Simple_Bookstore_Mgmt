<h2>Add New Author</h2>

<%= form_for @author do |f| %>
  <!-- check for errors -->
  <% if @author.errors.any? %>
    <% @author.errors.full_messages.each do |msg| %>
      <!-- show errors -->
      <div class="alert alert-danger">
        <%= msg %>
      </div>
    <%end%>
  <%end%>
  <div class="form-group">
    <%= f.label :firstname %><br/>
    <%= f.text_field :first_name, class:'from-control' %><br/>
  </div>

  <div class="form-group">
    <%= f.label :lastname %><br/>
    <%= f.text_field :last_name,type:'text', class:'from-control' %><br/>
  </div>

  <%= f.submit "Submit", class:'btn btn-primary' %>
  <%= link_to "Cancel", authors_path, class:'btn btn-default' %>
<%end%>
