<h2>Add New Book</h2>

<%= form_for @book do |f| %>
  <!-- check for errors -->
  <% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |msg| %>
      <!-- show errors -->
      <div class="alert alert-danger">
        <%= msg %>
      </div>
    <%end%>
  <%end%>
  <div class="form-group">
    <%= f.label :title %><br/>
    <%= f.text_field :title, class:'from-control' %><br/>
  </div>

  <div class="form-group">
    <%= f.label :isbn %><br/>
    <%= f.text_field :isbn, class:'from-control' %><br/>
  </div>

  <div class="form-group">
    <%= f.label :author %><br/>
    <%= f.select :author_id, Category.all.collect {|x| [x.name,x.id]},{:includ_blank => 'Select One'}, class:'from-control' %><br/><br/>
  </div>

  <div class="form-group">
    <%= f.label :category %><br/>
    <%= f.select :category_id, Author.all.collect {|x| [x.first_name+' '+x.last_name,x.id]},{:includ_blank => 'Select One'}, class:'from-control' %><br/><br/>
  </div>

  <div class="form-group">
    <%= f.label :publisher %><br/>
    <%= f.select :publisher_id, Publisher.all.collect {|x| [x.name,x.id]},{:includ_blank => 'Select One'}, class:'from-control' %><br/><br/>
  </div>

  <div class="form-group">
    <%= f.label :format %><br/>
    <%= f.text_field :format, class:'from-control' %><br/>
  </div>

  <div class="form-group">
    <%= f.label :coverpath %><br/>
    <%= f.text_field :coverpath, class:'from-control' %><br/>
  </div>

  <div class="form-group">
    <%= f.label :excerpt %><br/>
    <%= f.text_area :excerpt, class:'from-control' %><br/>
  </div>

  <div class="form-group">
    <%= f.label :pages %><br/>
    <%= f.number_field :pages, class:'from-control' %><br/>
  </div>

  <div class="form-group">
    <%= f.label :price %><br/>
    <%= f.text_field :price, class:'from-control' %><br/>
  </div>

  <div class="form-group">
    <%= f.label :buy %><br/>
    <%= f.text_field :pages, class:'from-control' %><br/>
  </div>

  <%= f.submit "Submit", class:'btn btn-primary' %>
  <%= link_to "Cancel", books_path, class:'btn btn-default' %>
<% end %>
